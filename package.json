{
  "name": "mixpad",
  "description": "Mockdown document parser and management",
  "version": "0.0.5",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:parser-old": "esbuild --bundle parser/index.ts --sourcemap --outfile=./mparser.js --format=cjs --platform=node",
    "build-old": "npm run build:parser-old",
    "test-old": "vitest run",
    "test": "node --test parse/tests/**/*.js"
  },
  "keywords": [
    "Mockdown",
    "Markdown"
  ],
  "author": "Oleg Mihailik",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.9",
    "vitest": "^3.2.4"
  }
}
